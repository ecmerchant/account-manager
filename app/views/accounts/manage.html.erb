<div class="page-header" id="banner">
  <div class="row">
    <div class="col-lg-10 col-md-8">
      <h2>ユーザ一覧</h2>
      <br>
      <table class="table table-striped table-hover table-bordered table-headerfixed">
        <thead class="thead-inverse">
          <tr>
            <th width="30%">アカウント名</th>
            <th width="30%">パスワード</th>
            <th width="20%">有効性</th>
            <th width="20%">更新日時</th>
          </tr>
        </thead>
        <tbody>
          <% for temp in @account %>
          <tr>
            <td width="30%"><%= temp.user %></td>
            <td width="30%"><%= temp.password%></td>
            <td width="20%"><%= temp.isvalid %></td>
            <td width="20%"><%= temp.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style type="text/css">
table.table-headerfixed {
/*    width: 100%;*/
}

table.table-headerfixed thead,
table.table-headerfixed tbody,
table.table-headerfixed tr,
table.table-headerfixed td,
table.table-headerfixed th {
    display: block;
}

table.table-headerfixed tr:after {
    content: ' ';
    display: block;
    visibility: hidden;
    clear: both;
}

table.table-headerfixed tbody {
    height: 290px;
    overflow-y: scroll;
}

table.table-headerfixed thead {
    /* fallback */
    width: 97%;
    /* minus scroll bar width */
    width: calc(100% - 17px);
}

table.table-headerfixed tbody td,
table.table-headerfixed thead th {
    float: left;
    height: 40px;
}

.ellipsis {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

</style>
